{{#if item.links}}
  <ul style='padding: 0px 0px 0px 18px;'>
    {{#each item.links}}
      {{#if @index}}
        {{#ifCond ../depth '<' 2}}
          <p></p>
        {{/ifCond}}
      {{/if}}
      <li>
        {{#if this.url}}
          <a href={{this.url}}>{{this.title}}</a>
        {{else}}
          {{this.title}}
        {{/if}}
        {{#if this.note}}
          <em> - {{this.note}}</em>
        {{/if}}
        {{> list
          item=this
          depth=(increment ../depth)
        }}
      </li>
    {{/each}}
  </ul>
{{/if}}
